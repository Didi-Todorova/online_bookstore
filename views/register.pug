doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Register
    link(rel="stylesheet", href="/stylesheets/styles.css")

  body

    .header
      .logo Books' Secret
  
    form#registerForm
      h2 Register
      input#username(type="text", name="username", placeholder="Username", required)
      input#email(type="email", name="email", placeholder="Email", required)
      input#password(type="password", name="password", placeholder="Password", required)
      input#confirmPassword(type="password", name="confirmPassword", placeholder="Confirm Password", required)
      input(type="submit", value="Register")

    script(src="javascripts/register.js")
